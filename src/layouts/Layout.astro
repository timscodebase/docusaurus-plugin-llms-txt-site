---
interface Props {
	title: string;
}

import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Make your Docusaurus documentation readable by AI Agents."
		/>
		<meta name="viewport" content="width=device-width" />
		<meta
			property="og:image"
			content="https://res.cloudinary.com/tithos/image/upload/c_scale,f_auto,q_auto:eco,w_600/v1763522405/meta_image_b5byfx.png"
		/>
		<meta property="twitter:card" content="summary_large_image" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body
		class="bg-slate-950 text-slate-200 font-sans antialiased selection:bg-indigo-500 selection:text-white"
	>
		<slot />
	</body>
</html>

<style is:global>
	/* Add Inter font if you want, or stick to system sans */
</style>
